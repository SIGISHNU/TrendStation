
<div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-5 col-md-8 col-sm-12">                        
                        <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Product Management </h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin"><i class="icon-home"></i></a></li>                            
                            <li class="breadcrumb-item">Table</li>
                            <li class="breadcrumb-item active">Product details</li>
                        </ul>
                    </div>            
                </div>
            </div>
            
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>product Details <small>view the product details</small> </h2>                            
                        </div>
                        <div class="container col-md-2 float-right">
                            <a href="/addProduct" class="btn btn-success btn-lg btn-block">Add Product</a><br>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table id="view-products" class="table css-serial table-bordered table-hover js-basic-example dataTable table-custom">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Images</th>
                                            <th>Price</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>No</th>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Images</th>
                                            <th>Price</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <td></td>
                                            <td>{{this.Name}}</td>
                                            <td>{{this.Category}}</td>
                                            <td>{{this.Description}}</td>
                                            <td>
                                                <img style="width: 50px; height:50px;" src="/product-images/{{this._id}}1.jpg" alt="">
                                                <img style="width: 50px; height:50px;" src="/product-images/{{this._id}}2.jpg" alt="">
                                                <img style="width: 50px; height:50px;" src="/product-images/{{this._id}}3.jpg" alt="">
                                            </td>
                                            <td>{{this.Price}}</td>
                                            <td><a href="/editProduct/{{this._id}}" class="btn btn-primary">Edit</a></td>
                                            <td><a href="/deleteProduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a></td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div> 
                    </div>
                </div>

<script>
    $(document).ready( function () {
        $('#view-product').DataTable();
    } );
</script>

<style>
    .css-serial {
        counter-reset: serial-number;
        }

    .css-serial td:first-child:before {
    counter-increment: serial-number;
    content: counter(serial-number);
    }
</style>