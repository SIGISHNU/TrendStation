<section id="cart_items">
	<div class="container">
		<div class="breadcrumbs">
			<ol class="breadcrumb">
				<li><a href="/">Home</a></li>
				<li class="active">Shopping Cart</li>
			</ol>
		</div>
		<div class="table-responsive cart_info">
			<table class="table table-condensed">
				<thead>
					<tr class="cart_menu">
						<td class="image">Item</td>
						<td class="description">Description</td>
						<td class="price">Price</td>
						<td class="quantity">Quantity</td>
						<td class="total">Total</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					{{#each products}}
					<tr>
						<td class="cart_product">
							<a href=""><img src="/product-images/{{this.product._id}}1.jpg"
									style="width:70px; height: 80px; margin-top: 15px; margin-left: 20px;" alt=""></a>
						</td>
						<td class="cart_description">
							<h4><a href="">{{this.product.Name}}</a></h4>
							<p>{{this.product.Category}}</p>
						</td>
						<td class="cart_price">
							<p>{{this.product.Price}}</p>
						</td>
						<td class="cart_quantity">
							<div class="cart_quantity_button">
								<button class="cart_quantity_up"
									onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</button>
								<span id="{{this.product._id}}">{{this.quantity}}</span>
								<button class="cart_quantity_down"
									onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)"> +
								</button>
							</div>
						</td>
						<td class="cart_total">
							<span class="cart_total_price" id="sub{{this.product._id}}">â‚¹{{subtotal}}</span>
						</td>
						<td>
							<bttton class="btn btn-danger"
								onclick="removeProCart('{{this._id}}','{{this.product._id}}')">Remove</bttton>
						</td>
					</tr>
					{{/each}}
					<tr>
						<td colspan="4">&nbsp;</td>
						<td colspan="2">
							<table class="table table-condensed total-result">
								<tr>
									<td class="cart_total_price">
										<h4>Total Rs.<span id="total">{{totalValue}}</span></h4>
									</td>
								<tr>
									<td><a href="/place-order" class="btn btn-success"><b>Place Order</b></a></td>
								</tr>
					</tr>
			</table>
			</td>
			</tr>
			</tbody>
			</table>
		</div>
	</div>
</section>
<!--/#cart_items-->


<script>
	function changeQuantity(cartId, proId, userId, count) {
		let quantity = parseInt(document.getElementById(proId).innerHTML)
		count = parseInt(count)

			console.log(userId)
		$.ajax({
			url: '/change-product-quantity',
			data: {
				user: userId,
				cart: cartId,
				product: proId,
				count: count,
				quantity: quantity
			},
			method: 'post',
			success: (response) => {
				if (response.removeProduct) {
					alert("Product removed from cart")
					location.reload()
				} else {
					console.log(response)
					document.getElementById(proId).innerHTML = quantity + count
					document.getElementById('total').innerHTML = response.total
					document.getElementById('sub'+proId).innerHTML = response.subtotal
				}
			}
		})
	}
</script>

<script>
	function removeProCart(cartId, proId) {
		$.ajax({ 
			url: '/removeProCart',
			data: {
				cart: cartId,
				product: proId
			},
			method: 'post',
			success: (response) => {
				if (response.removeProduct) {
					alert("Product removed from cart")
					location.reload()
				}
			}
		})
	}
</script>

















































