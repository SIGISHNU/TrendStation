<div class="container">
    <div class="card col-md-6">
        <div class="header">
            <p class="lead">My Profile</p>
        </div>
        <div class="body ml-5">
            <form class="form-auth-small" id="user-profile" action="" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" value="{{profile.Name}}" name="Name" placeholder="Name" readonly>
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" value="{{profile.Username}}" name="Username"
                        placeholder="Username" readonly>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" value="{{profile.Email}}" name="Email"
                        placeholder="Email Address" readonly>
                </div>
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="number" class="form-control" value="{{profile.Mobile}}" name="Mobile"
                        placeholder="Mobile Number" readonly>
                </div>
                <div>
                    <a class="btn btn-success" href="/">Back to Home</a>
                    <button type="submit" class="btn btn-warning">Update Profile</button>
                    <a class="btn btn-danger" href="/add-user-address">Add Address</a>
                </div><br>
            </form>
        </div>
    </div>



    <div class="col-md-6">
        {{#each address}}
        <div class="col-md-6">
            <h3 style="color:darkblue;">Your Address</h3>
            <h5>{{this.Name}}</h5>
            <h5>{{this.Phone}}</h5>
            <h5>{{this.Email}}</h5>
            <h5>{{this.Country}}, {{this.State}}, Pin - {{this.Pincode}}</h5>
            <a href="/edit-user-address/{{this._id}}" class="btn btn-info text-dark">Edit Address</a>
        </div>
        {{/each}}
    </div>
</div>

<script>
    $(document).ready(() => {
        $("#user-profile").validate({
            rules: {
                Name: {
                    required: true
                },
                Username: {
                    required: true
                },
                Email: {
                    required: true,
                    email: true
                },
                Mobile: {
                    required: true,
                    number: true
                }
            }
        });
    });
</script>